{
  // IntelliSense를 사용하여 가능한 특성에 대해 알아보세요.
  // 기존 특성에 대한 설명을 보려면 가리킵니다.
  // 자세한 내용을 보려면 https://go.microsoft.com/fwlink/?linkid=830387을(를) 방문하세요.
  "version": "0.2.0",
  "configurations": [
    {
      "name": "(lldb) Launch",  // 디버그 드롭다운에 나타나는 디버그 런치이름   
      "type": "cppdbg",  // 실행구성에 사용할 디버거 유형 ( node, python ... ) 
      "request": "launch", // 실행 구성의 요청유형 (launch ,  attach)
      "program": "${fileDirname}/${project_2.1}.out", //디버거를 시작할 때 실행할 실행 파일 또는 파일
      "args": [], // 디버깅 할 프로그램에 전달된 인수
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}", //의존성 및 기타 파일을 찾기위한 현재 작업 디렉토리
      "environment": [],
      "externalConsole": false,
      "MIMode": "lldb",
      "osx": {
        "MIDebuggerPath": "/Applications/Xcode.app/Contents/Developer/usr/bin/lldb-mi"
      }
      //속성중 일부 를 지원함 하기 4개 
      //"env":, // 환경 변수
      //"port":,  // 실행중인 프로세스에 연결할 때의 포트
      //"stopOnEntry":  // 프로그램이 시작되면 즉시 중단
      //"console":  // 어떤 종류를 콘솔을 사용할지 지정. 예를 들어 internalConsole, integratedTerminal, externalTerminal
      //실행 구성에서 사용할 수 있는 선택적 속성
      //preLaunchTask : 디버그 세션이 시작되기 전에 작업을 시작하려면 이 속성을 tasks.json 에 지정된 이름으로 설정해야합니다
      //internalConsoleOptions : 디버깅 세션동안 다버그 콘솔 패널의 가시성을 제어합니다.
      //debugServer : 디버그를 시작하는 대신 지정 포트에 연결합니다.
    }
  ]
}
